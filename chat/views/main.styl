body {
    font-family: "lucida grande",tahoma,verdana,arial,sans-serif;
    font-size: 0.8em;
}

#landing {
    margin-top: 200px;
    width: 500px;
    text-align: center;
    margin: 200px auto;
}

#landing div {
    font-size: 3em;
    font-weight: bold;
    margin-bottom: 100px;
}

#container {
    display: none;
    height: 96%;
    width: 99%;
    position: absolute;
}

#main {
    border: 1px solid black;
    width: 74.5%;
    height: 100%;
    position: absolute;
    border-radius: 15px;
}

#side {
    width: 25%;
    height: 100%;
    float: right;
    position: relative;
    background-color: #abcdef;
}

#roomName {
    width: 100%; height: 25px;
    padding-top: 9px;
    text-align: center;
    color: white;
    background-color: #1B287D;
    font-weight: bold;
    font-size: 1.1em;
}

#text {
    width: 100%;
    border-radius: 15px;
    overflow: auto;
    padding: 3px; 
    word-wrap: break-word;
}

#bottomBox {
    bottom: 5px;
    left: 5px;
    position: absolute;
    width: 100%;
}

input#msg {
    width: 97%;
    border: 1px solid #000;
    height: 20px;
}


#selectVideo {
    width: 60%;
    position: relative;
    left: 20%;
}

.floatDiv {
    float:left;
}
